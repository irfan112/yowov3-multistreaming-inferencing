# =======================================
# YOWO Multi-Stream Detection System
# Environment Configuration File
# =======================================

# =======================================
# VIDEO SOURCE CONFIGURATION
# =======================================
# Primary video sources (can be RTSP streams or video files)
VIDEO_SOURCE_1=ucf24/videos/Basketball/v_Basketball_g22_c01.mp4
VIDEO_SOURCE_2=ucf24/videos/Diving/v_Diving_g15_c05.mp4
VIDEO_SOURCE_3=ucf24/videos/Diving/v_Diving_g15_c05.mp4

# Additional video sources (optional - add more as needed)
# VIDEO_SOURCE_3=ucf24/videos/CliffDiving/v_CliffDiving_g16_c03.mp4
# VIDEO_SOURCE_4=ucf24/videos/SoccerJuggling/v_SoccerJuggling_g14_c03.mp4

# RTSP Stream Examples (uncomment and modify as needed)
# VIDEO_SOURCE_1=rtsp://admin:password@192.168.1.100:554/cam/realmonitor?channel=1&subtype=1
# VIDEO_SOURCE_2=rtsp://admin:password@192.168.1.101:554/cam/realmonitor?channel=1&subtype=1

# =======================================
# PERFORMANCE CONFIGURATION
# =======================================
# Maximum FPS for processing (lower values reduce CPU/GPU load)
MAX_FPS=15

# Display FPS (can be lower than processing FPS to save resources)
DISPLAY_FPS=12

# Visualization window dimensions
VIZ_WIDTH=720
VIZ_HEIGHT=448

# Model input size (typically 224, 448, or 512)
MODEL_INPUT_SIZE=224

# =======================================
# MODEL CONFIGURATION
# =======================================
# Path to YOWO model weights
MODEL_WEIGHTS_PATH=weights/yowo_v3.pth

# Path to model configuration file
MODEL_CONFIG_PATH=configs/yowo_v3_ucf24.yaml

# Device configuration (cuda or cpu)
DEVICE=cuda

# Confidence threshold for detections
CONFIDENCE_THRESHOLD=0.5

# IoU threshold for non-maximum suppression
IOU_THRESHOLD=0.5

# =======================================
# DATASET CONFIGURATION
# =======================================
# Path to UCF24 dataset
UCF24_DATASET_PATH=ucf24

# Path to action class mapping file
CLASS_MAPPING_PATH=configs/ucf24_classes.json

# Number of frames in each clip for YOWO processing
CLIP_LENGTH=16

# =======================================
# LOGGING CONFIGURATION
# =======================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE_PATH=logs/yowo_detection.log

# Enable detailed performance logging
PERFORMANCE_LOGGING=false

# =======================================
# RTSP STREAM CONFIGURATION
# =======================================
# RTSP connection timeout in seconds
RTSP_TIMEOUT=10

# Maximum reconnection attempts for RTSP streams
MAX_RETRY_ATTEMPTS=5

# Buffer size for RTSP streams (lower = less latency, higher = more stable)
RTSP_BUFFER_SIZE=1

# Frame reading timeout for RTSP streams
FRAME_TIMEOUT=2.0

# =======================================
# MEMORY MANAGEMENT
# =======================================
# Enable CUDA memory cleanup after each batch
CUDA_MEMORY_CLEANUP=true

# Maximum queue size for frame processing
MAX_QUEUE_SIZE=1

# Frame buffer size for each stream
FRAME_BUFFER_SIZE=16

# =======================================
# DISPLAY CONFIGURATION
# =======================================
# Enable window resizing
RESIZABLE_WINDOWS=true

# Window position offset (for multiple monitors)
WINDOW_OFFSET_X=0
WINDOW_OFFSET_Y=0

# Show detection statistics in window titles
SHOW_STATS_IN_TITLE=true

# =======================================
# DEBUG CONFIGURATION
# =======================================
# Enable debug mode (more verbose output)
DEBUG_MODE=false

# Save detection frames to disk (for debugging)
SAVE_DEBUG_FRAMES=false
DEBUG_FRAMES_PATH=debug_output

# Print processing time for each frame
SHOW_PROCESSING_TIME=false

# =======================================
# ADVANCED CONFIGURATION
# =======================================
# Number of worker threads for parallel processing
NUM_WORKER_THREADS=2

# Enable multi-GPU support (if available)
MULTI_GPU=false

# Batch size for model inference (usually 1 for real-time)
BATCH_SIZE=1

# Frame skip for high FPS sources (1 = no skip, 2 = process every 2nd frame)
FRAME_SKIP=1



# =======================================
# VIDEO SAVING CONFIGURATION
# =======================================
# Enable saving processed videos with detections
SAVE_OUTPUT_VIDEO=true

# Output directory for saved videos
OUTPUT_DIR=output

# Video codec for saved files (mp4v, XVID, H264)
VIDEO_CODEC=mp4v


# =======================================
# SYSTEM PATHS
# =======================================
# Python path for custom modules
PYTHONPATH=.

# CUDA library path (if needed)
# LD_LIBRARY_PATH=/usr/local/cuda/lib64

# Temporary directory for processing
TEMP_DIR=temp

# Output directory for saved results
OUTPUT_DIR=output

# =======================================
# NETWORK CONFIGURATION (for RTSP)
# =======================================
# Network timeout for stream connections
NETWORK_TIMEOUT=30

# Enable TCP for RTSP (set to false for UDP)
RTSP_TCP=true

# Custom user agent for RTSP requests
# RTSP_USER_AGENT=YOWODetection/1.0